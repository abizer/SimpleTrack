server {
    listen 80;
    server_name sbd.tahabi.com;

    client_max_body_size 100M;

    access_log /var/log/nginx/access_simpletrack.log;
    error_log /var/log/nginx/error_simpletrack.log;

    location /favicon.ico {
        access_log off;
	log_not_found off;
    }

    location ~ ^/(media|static)/ {
        root /home/abizer/projects/SimpleTrack/;
    }

    location / {
        include proxy_params;
	proxy_pass http://unix:/home/abizer/projects/SimpleTrack/socket/simpletrack.sock;
    }
}