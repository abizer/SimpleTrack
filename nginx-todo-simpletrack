server {
    listen 80;
    server_name todo.abizer.me;

    client_max_body_size 100M;

    access_log /var/log/nginx/access_todo.log;
    error_log /var/log/nginx/error_todo.log;

    location /favicon.ico {
        access_log off;
	log_not_found off;
    }

    location ~ ^/(media|static)/ {
        root /home/abizer/projects/todo-simpletrack/;
    }

    location / {
        include proxy_params;
	proxy_pass http://unix:/home/abizer/projects/todo-simpletrack/socket/simpletrack.sock;
    }
}